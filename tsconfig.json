{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "server",
    "declaration": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "client",
    "node_modules"
  ]
}